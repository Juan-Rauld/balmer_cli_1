<!-- flex -->
<div class="seccion-bloque_puesta-marcha-retiro-despacho">
  <!-- grid -->
  <div class="container_requiere-servicio-puesta-marcha">
    <div
      class="header_container-requiere-servicio-puesta-marcha"
      style="background-color: {{ section.settings.background_texto-body-requiere-servicio-puesta-marcha  }};"
    >
      <div
        class="sub_items-container-requiere-servicio icono_header-container-requiere-servicio-puesta-marcha"
      >
        <img
          src="https://cdn.shopify.com/s/files/1/0267/7168/5451/files/gear-settings-filled.svg?v=1695943859"
          alt=""
        >
      </div>
      <div class="sub-item-container-titulo">
        <h4
          class="sub_items-container-requiere-servicio titulo_header-container-requiere-servicio-puesta-marcha"
        >
          {{ section.settings.titulo_seccion_puesta_en_marcha }}
        </h4>
      </div>
    </div>
    <div class="body_container-requiere-servicio-puesta-marcha">
      <div>{{ section.settings['texto-body-requiere-servicio-puesta-marcha'] }}</div>
      <a href="{{ section.settings.button_link }}">
        <h4
          class="global-button boton-servicios-tecnicos_pagina-producto"
          id="boton-ver-servicio-tecnico-autorizado-pagina-producto"
        >
          {{ section.settings.texto_button_link }}
        </h4>
      </a>
    </div>
    <div class="footer_container-requiere-servicio-puesta-marcha">
      {{ section.settings.footer_seccion_puesta_en_marcha }}
    </div>
  </div>

  <div class="container_info-despacho-retiro">
    <div class="header_info-despacho-retiro">
      <div class="active-info-despacho-retiro" id="boton_info-despacho">
        <img
          src="https://cdn.shopify.com/s/files/1/0267/7168/5451/files/truck-delivery.svg?v=1695943859"
          alt=""
        >
        <h4 class="titulo_seccion_retiro_despacho">{{ section.settings.titulo_seccion_despacho }}</h4>
      </div>
      <div id="boton_info-retiro">
        <img
          src="https://cdn.shopify.com/s/files/1/0267/7168/5451/files/building-store.svg?v=1695943858"
          alt=""
        >
        <h4 class="titulo_seccion_retiro_despacho">{{ section.settings.titulo_seccion_retiro }}</h4>
      </div>
    </div>
    <div class="contenido_despacho">
      {{ section.settings.texto_despacho_1 }}
    </div>
    <div class="contenido_retiro">
      {{ section.settings.texto_despacho_2 }}
    </div>
  </div>
</div>

<script>
  const botonDespacho = document.getElementById('boton_info-despacho');
  const botonRetiro = document.getElementById('boton_info-retiro');
  const contenidoDespacho = document.querySelector('.contenido_despacho');
  const contenidoRetiro = document.querySelector('.contenido_retiro');

  contenidoRetiro.style.display = 'none';

  botonDespacho.addEventListener('click', function () {
    contenidoDespacho.style.display = 'block';
    contenidoRetiro.style.display = 'none';
    botonDespacho.classList.add('active-info-despacho-retiro');
    botonRetiro.classList.remove('active-info-despacho-retiro');
  });

  botonRetiro.addEventListener('click', function () {
    contenidoDespacho.style.display = 'none';
    contenidoRetiro.style.display = 'block';
    botonRetiro.classList.add('active-info-despacho-retiro');
    botonDespacho.classList.remove('active-info-despacho-retiro');
  });
</script>

<style>
  .titulo_seccion_retiro_despacho, .titulo_header-container-requiere-servicio-puesta-marcha {
    font-size: {{ section.settings.font_size_servicio-puesta-en-marcha-o-retiro_desktop }}rem;
  }

  /* responsivo */
  @media (max-width: 768px) {
    .titulo_seccion_retiro_despacho, .titulo_header-container-requiere-servicio-puesta-marcha {
      font-size: {{ section.settings.font_size_servicio-puesta-en-marcha-o-retiro_mobile }}rem;
    }
  }
</style>

